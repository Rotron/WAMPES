#! /usr/bin/perl -w

# @(#) $Id: tcprcs,v 1.6 1999-04-21 19:58:22 deyke Exp $

require 5.003;

use Cwd;

use strict;

use vars '$master_dir';
use vars '@options';

#------------------------------------------------------------------------------

# Return dirname of path

sub dirname {
	my ($dir) = @_;
	$dir =~ s![/\\][^/\\]*$!! or return '.';
	$dir or return '/';
	return $dir;
}

#------------------------------------------------------------------------------

# Create a directory and its parents if they do not exist already

sub mkdir_p {
	my ($dir) = @_;
	-d $dir and return;
	mkdir($dir, 0750) and return;
	mkdir_p(dirname($dir));
	-d $dir and return;
	mkdir($dir, 0750) or die("mkdir(\"$dir\"): $!\n");
}

#-----------------------------------------------------------------------------

# Compare two files, returning:
#
# 0 --> Files are identical.
# 1 --> Files are not identical.
# 2 --> One or both files inaccessible.

sub cmpfiles {

	my ($file1, $isbin1, $file2, $isbin2) = @_;

	my ($buffer1, $n1);
	my ($buffer2, $n2);
	my ($retval);
	my ($tmpfile);
	my ($tmpisbin);

	if ($isbin1 == $isbin2) {
		-e $file1 or return 2;
		$n1 = -s _;
		-e $file2 or return 2;
		$n2 = -s _;
		$n1 == $n2 or return 1;
	} elsif ($isbin1) {
		$tmpfile = $file1;
		$tmpisbin = $isbin1;
		$file1 = $file2;
		$isbin1 = $isbin2;
		$file2 = $tmpfile;
		$isbin2 = $tmpisbin;
	}
	open(FILE1, $file1) or return 2;
	binmode(FILE1) if $isbin1;
	open(FILE2, $file2) or close(FILE1), return 2;
	binmode(FILE2) if $isbin2;
	$retval = 0;
	$buffer1 = $buffer2 = '';
	while ($n1 = sysread(FILE1, $buffer1, 8192)) {
		$n2 = sysread(FILE2, $buffer2, $n1);
		($n1 != $n2 or $buffer1 ne $buffer2) and $retval = 1, last;
	}
	close(FILE1);
	close(FILE2);
	return $retval;
}

#------------------------------------------------------------------------------

# Create file containing binary data

sub writefile {

	my ($filename, @values) = @_;

	my ($buffer);
	my ($n);

	open(FILE, ">$filename") or die("$filename: $!\n");
	binmode(FILE);
	$buffer = pack('c*', @values);
	$n = length($buffer);
	syswrite(FILE, $buffer, $n) == $n or die("syswrite(\"$filename\"): $!\n");
	close(FILE);
}

#------------------------------------------------------------------------------

# Find tmp directory

sub find_tmp_dir {

	my ($dir);

	$dir = ($^O eq 'MSWin32') ? $ENV{'TEMP'} : "$ENV{'HOME'}/tmp";
	mkdir_p($dir);
	return $dir;
}

#------------------------------------------------------------------------------

# Parse arguments

sub parse_args {

	my ($cwd);
	my ($file);
	my (@files) = ();

	@options = ();
	for (; @ARGV and $ARGV[0] =~ /^-/; shift(@ARGV)) {
		push(@options, $ARGV[0]);
	}
	push(@files, @ARGV);
	if (!@files) {
		open(FIW, "cd $master_dir; find . -type f -print |") or die("fiw: $!\n");
		foreach $file (<FIW>) {
			chop($file);
			push(@files, $file) if -f $file;
		}
		close(FIW) or die("close(): $!\n");
	}
	die("No files specified!\n") unless @files;
	($cwd = getcwd()) =~ y!\\!/!;
	foreach $file (@files) {
		$file =~ y!\\!/!;
		$file =~ s!^$cwd/!!i;
	}
	return (sort(@files));
}

#------------------------------------------------------------------------------

