#------------------------------------------------------------------------------

sub setup_master {

	my ($file);
	my ($rcsfile);

	foreach $rcsfile (`find . -type f -path "*/RCS/*,v" -print`) {
		chop($rcsfile);
		$file = $rcsfile;
		$file =~ s!(.*)/RCS/(.*),v$!$master_dir/$1/$2!;
		if (! -f $file or -M $rcsfile < -M $file) {
			mkdir_p(dirname($file));
			system("co -q -p $rcsfile > $file");
		}
	}
}

#------------------------------------------------------------------------------

sub check_missing_files {

	my ($dir);
	my ($file);
	my ($rcsdir);
	my ($rcsfile);

	# Check for RCS files without working files

	open(PIPE, 'find . -type f -path "*/RCS/*,v" -print |') or die();
	foreach $rcsfile (<PIPE>) {
		chop($rcsfile);
		$file = $rcsfile;
		$file =~ s!(.*)/RCS/(.*),v$!$1/$2!;
		if (! -f $file) {
			print("$file is missing\n");
		}
	}
	close(PIPE);

	# Check for text working files without RCS files

	open(PIPE, 'find . -type d -name RCS -print |') or die();
	foreach $rcsdir (<PIPE>) {
		chop($rcsdir);
		$dir = $rcsdir;
		$dir =~ s!/RCS$!!;
		opendir(DIR, $dir) or die();
		foreach $file (readdir(DIR)) {
			if ($file ne ".trimtime" and
			    $file ne "configure.h" and
			    $file ne "configure.mak" and
			    -f "$dir/$file" and
			    ! -l "$dir/$file" and
			    -T "$dir/$file") {
				$rcsfile = "$dir/RCS/$file,v";
				if (! -f $rcsfile) {
					print("$rcsfile is missing\n");
				}
			}
		}
		closedir(DIR);
	}
	close(PIPE);
}

#------------------------------------------------------------------------------

$master_dir = "$ENV{'HOME'}/tmp/tcpmaster";
chdir("$ENV{'HOME'}/tcp") or die();
check_missing_files();
setup_master();
pdiff();
