#! /bin/csh -f

# @(#) $Header: /home/deyke/tmp/cvs/tcp/tools/mkrc,v 1.4 1993-02-23 21:33:48 deyke Exp $

foreach i (1 2 3 4)
set tty=ttyr$i
cat >i$i << EOF

hostname     test$i
ax25 mycall  test$i
ip address   $i.$i.$i.$i
netrom ident test$i

attach asy 0 0 kissui $tty 0 256 9600

attach netrom

ax25 route add $tty default

route add default $tty

echo refuse
icmp trace on
ip rtimer 100
ip ttl 30
tcp mss 216
tcp window 2048

log /dev/tty
start ax25
start discard
start echo
start ftp
start netrom
start rip
start tcpgate finger
start telnet

netrom links test1 test2 200 permanent
arp add 1.1.1.1 netrom test1
arp add 2.2.2.2 netrom test2

trace $tty 1111

EOF
end
