#! /bin/csh -f

# @(#) $Header: /home/deyke/tmp/cvs/tcp/tools/fixnetrc,v 1.4 1993-11-09 15:38:40 deyke Exp $

set nonomatch

set empty = /tmp/tmp$$

rm -f /tmp/iprt.* $empty

echo ' ' > $empty

makeiprt
if ($status) exit 1

foreach i (net.rc.*)
  set file = `expr substr $i 8 999`
  if (-f /tmp/iprt.$file) then
    ex - net.rc.$file <<EOF
      %g/^route add/d
      r $empty
      r /tmp/iprt.$file
      r $empty
      x
EOF
  endif
end

trimfiles

rm -f /tmp/iprt.* $empty
