#! /bin/ksh

# @(#) $Header: /home/deyke/tmp/cvs/tcp/tools/fixnetrc,v 1.6 1995-03-13 13:32:21 deyke Exp $

empty=/tmp/tmp$$

rm -f /tmp/iprt.* $empty

echo ' ' > $empty

makeiprt || exit 1

for i in net.rc.*; do
	file=${i#net.rc.}
	if [[ -f /tmp/iprt.$file ]]; then
		ex - net.rc.$file <<EOF
		%g/^route add/d
		r $empty
		r /tmp/iprt.$file
		r $empty
		x
EOF
	fi
done

trimfiles

rm -f /tmp/iprt.* $empty
